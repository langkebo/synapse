{
	"info": {
		"_postman_id": "c6a1b2c3-d4e5-4f6a-8b9c-0d1e2f3a4b5c",
		"name": "Synapse-Rust API Tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response contains access_token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.access_token).to.be.a('string');",
							"    pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"type\": \"m.login.password\",\n    \"user\": \"test_user\",\n    \"password\": \"test_password\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/_matrix/client/r0/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"_matrix",
						"client",
						"r0",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Sync",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response time is less than 500ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(500);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/_matrix/client/r0/sync?timeout=0",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"_matrix",
						"client",
						"r0",
						"sync"
					],
					"query": [
						{
							"key": "timeout",
							"value": "0"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Federation Version",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/_matrix/federation/v1/version",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"_matrix",
						"federation",
						"v1",
						"version"
					]
				}
			},
			"response": []
		},
		{
			"name": "Idempotency Test /v1/sendTransaction",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 or 401/403 (depending on auth)\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 401, 403]);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"origin\": \"matrix.cjystx.top\",\n    \"origin_server_ts\": {{$timestamp}},\n    \"pdu\": []\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/_matrix/federation/v1/send/{{$guid}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"_matrix",
						"federation",
						"v1",
						"send",
						"{{$guid}}"
					]
				}
			},
			"response": []
		}
	],
